@section scripts{
    <script type="text/javascript" src="~/Services/SalesScript.js "></script>
    <script>$(function () { GetSales(); })</script>
}
<h2>All Sales</h2>
<div style="width:800px; margin-left:auto; margin-right:auto">
    <button type="button" class="btn btn-success" onclick="ClickCreate()">Create</button>

    <p>&nbsp;</p>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th bg="color: white">Id</th>
                <th bg="color: white">Product</th>
                <th bg="color: white">Customer</th>
                <th bg="color: white">Store</th>
                <th bg="color: white">Date</th>
                <th bgcolor="White" colspan="2" class="col-lg-1 col-centered"><p align="center">Action</p></th>
            </tr>
        </thead>
        <tbody id="saletable"></tbody>
    </table>
</div>
@*Model Start*@
<div id="updatemodal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 id="modeltitle" class="modal-title"></h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <button type="button" class="btn btn-success" id="btnsave" onclick="SaveChanges()"></button>
                    <div id="saleid" name="saleid" hidden ="hidden"></div>
                    <p>&nbsp;</p>
                    <div>
                        <h3 style="color:red">All fields must have a value</h3>
                    </div>
                    <p>&nbsp;</p>
                    <div>
                        <label>Product: </label>
                        <select  id="productlist" name="productlist" onchange="Validations()" style="width:400px"></select>
                        <span id="productmsg" style="color: red">Select a Product</span>
                    </div>
                    <div>
                        <label>Customer: </label>
                        <select id="customerlist" name="customerlist" onchange="Validations()" style="width:400px"></select>
                        <span id="customermsg" style="color: red">Select a Customer</span>
                    </div>
                    <div>
                        <label>Store: </label>
                        <select id="storelist" name="storelist" onchange="Validations()" style="width:400px"></select> 
                        <span id="storemsg" style="color: red">Select a Store</span>
                    </div>
                    <div>
                        <label>Date: </label>
                        <input type="date" class ="date" id="saledate" name="saledate" onchange="Validations()"/>
                        <span id="datemsg" style="color: red">Select a Date</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@*Model End*@
